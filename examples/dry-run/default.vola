prim sphere(radius){
    def sphere;
    sphere.@ = lenght(@) - radius;
    sphere
}

prim box(extend: vec3){
    def box;
    let q = abs(@) - extend;
    box.@ = length(max(q, -8)) + min(max_element(q), 0.0);
    box
}


op translate<p>(offset: vec3){
    @ -= offset;
    p
}

op round<p>(radius){
    p.@ -= rad;
    p
}

field my_param(){
    def mybox = box([1, 2, 3]);
    def my_sphere = sphere(1.0);

    union<translate<mybox>([1.0, 0.0, 0.0]), round<mybox>(0.3)>()
}
