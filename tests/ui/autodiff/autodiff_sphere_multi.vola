entity Sphere(rad: s);
concept Sdf: vec3 -> s;

impl Sphere for Sdf(at){
    length(at) - rad
}

concept Gradient: vec3 -> vec3;
operation MyAdOp();
impl MyAdOp<sub> for Gradient(at){
    let sd = eval sub.Sdf(at);
    diff(sd, at)
}

export mysdf(at: vec3){
    csg sphere = MyAdOp(){Sphere(1.0)};
    eval sphere.Gradient(at)
}
