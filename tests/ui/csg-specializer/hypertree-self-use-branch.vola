module std;


operation HyperOp();
impl HyperOp<sub> for SDF3D(at){
    csg t = if at.x > 0.0{
        sub
    }else{
        Union(){
            sub
        }{
            HyperOp(){
                Sphere(1.0)
            }
        }
    };

    eval t.SDF3D(at - [-1.0, 0.0, 0.0])
}


export fn myfield(at: vec3) -> real{
    csg t = HyperOp(){
        Translate([1.0, 0.0, 0.0]){
            Sphere(2.0)
        }
    };

    eval t.SDF3D(at)
}
