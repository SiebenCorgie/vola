module std;

entity nSpheres(n: int);
impl nSpheres for SDF3D(at){
    let d = 100000.0;
    let w = 0.0;
    for idx in 0..n{
        let t = if w > 0.0{
            2.0
        }else{
            1.0
        };
        let local_d = min(min(t, d), length(at - [w, t, t]) - 3.0);
        d = local_d;
        w = w - 1.0;
    }

    d
}


export fn myFn(at: vec3) -> real{
	csg t = nSpheres(3);
	eval t.SDF3D(at)
}
