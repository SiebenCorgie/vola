module std;

operation ColorFlip();

impl ColorFlip<sub> for Color(at){

	let mylocal_y = at.y + 1.0;
	
	if (at.x % 2.0) < 1.0{
		[at.x + 1.0, mylocal_y, 0.0]
	}else if at.y > 10.0{
		[0.0, 1.0, 0.0]
	}else{
		[32.0, 64.0, clamp(mylocal_y, 0.0, 1.0)]
	}
}

export myField(at: vec3){
	csg t = ColorFlip(){
		Box([10.0, 10.0, 10.0])
	};

	eval t.Color(at)
}
