module std;

operation ColorFlip();

impl ColorFlip<sub> for Color(at){

	let mylocal_y = at.y + 1.0;

	if (at.x % 2.0) < 1.0{
		let the_thing = mylocal_y + at.x / 32.0;
		[at.x + 1.0, mylocal_y, the_thing]
	}else{
		[0.0, 1.0, 0.0]
	}
}

export fn myField(at: vec3) -> vec3{
	csg t = ColorFlip(){
		Box([10.0, 10.0, 10.0])
	};

	eval t.Color(at)
}
