module std;


operation Weather(amount: real);

impl Weather<sub> for SDF3D(at){
	let subat = eval sub.SDF3D(at);
	let noise_sample = noise(at.x);

	subat + noise_sample
}


export fn myFn(at: vec3) -> real{
	csg f = Union(){
		Weather(1.0){
			Sphere(1.0)
		}
	}{
		Sphere(1.0)
	};

	eval f.SDF3D(at)
}
